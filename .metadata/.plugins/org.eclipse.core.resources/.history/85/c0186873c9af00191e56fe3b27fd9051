package javaLearning;

public class IncrementAndDecrementOperator {

	
	public static void main(String[] args) {
		
		
		int i = 1;
		int j = i++;  //Post increment
				
		System.out.println("Post increment:"+i);
		System.out.println("Post increment:"+j);
		
		
		int a = 1;
		int b = ++a;  ////Pre increment
		
		System.out.println("Pre increment:"+a);
		System.out.println("Pre increment:"+b);
	
		
		int l = 2;
		int m = l--;  ////Post decrement
		
		System.out.println("Post decrement:"+l);
		System.out.println("Post decrement:"+m);
	 
		int r = 2;
		int s = --r;  ////Pre decrement
		
		System.out.println("Pre decrement:"+r);
		System.out.println("Pre decrement:"+s);
	 
		
		
	}
	
	
}
